{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mb-4">{{ title }}</h1>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.bookId) }}
                            {{ form_widget(form.bookId, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.bookId) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.title) }}
                            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.title) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.author) }}
                            {{ form_widget(form.author, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.author) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.isbn) }}
                            {{ form_widget(form.isbn, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.isbn) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.format) }}
                            {{ form_widget(form.format, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.format) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.price) }}
                            {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.price) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.library) }}
                            {{ form_widget(form.library, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.library) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.category) }}
                            {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.category) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">Cancel</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
