{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h1 class="h3 mb-0">Register</h1>
                </div>
                <div class="card-body">
                    {{ form_start(registrationForm, {'attr': {'class': 'needs-validation'}}) }}
                        <div class="mb-3">
                            {{ form_label(registrationForm.userId) }}
                            {{ form_widget(registrationForm.userId, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.userId) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.name) }}
                            {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.name) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.email) }}
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.email) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.plainPassword) }}
                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.studentId) }}
                            {{ form_widget(registrationForm.studentId, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.studentId) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.major) }}
                            {{ form_widget(registrationForm.major, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.major) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.yearOfStudy) }}
                            {{ form_widget(registrationForm.yearOfStudy, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.yearOfStudy) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Register</button>
                            <a href="{{ path('app_login') }}" class="btn btn-link">Already have an account? Login</a>
                        </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
